<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/main_activity_horizontal_margin"
                android:paddingRight="@dimen/main_activity_horizontal_margin"
                android:paddingTop="@dimen/main_activity_vertical_margin"
                android:paddingBottom="@dimen/main_activity_vertical_margin"
                tools:context=".MainActivity"
                android:background="@drawable/background"
                android:id="@+id/container"
    android:screenOrientation="portrait">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_logo"
        android:src="@drawable/logo_blanc"
        android:contentDescription="@string/logo_description"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout"
        android:layout_below="@+id/main_logo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_marginTop="25dp">

        <Button style="@style/DefaultButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_select_genres"
            android:id="@+id/buttonFindAMovie"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            />

        <Button style="@style/DefaultButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_my_movies"
            android:id="@+id/buttonMyMovies"
            android:layout_below="@+id/buttonFindAMovie"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This product uses the TMDb API but is not endorsed or certified by TMDb."
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textColor="#393939"/>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/settingsButton"
        android:src="@drawable/settings_button_selector"
        android:background="#00000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="14dp"
        android:scaleType="fitXY" />


</RelativeLayout>
