<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:typeface">serif</item>
    </style>
    <style name="DefaultButton">
        <item name="android:textSize">@dimen/default_button</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/button_selector</item>
    </style>
    <style name="LargeButton">
        <item name="android:textSize">@dimen/default_button</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/large_button_selector</item>
    </style>
    <style name="SelectCategories">
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/listViewitem</item>
    </style>
    <style name="SelectMovies">
        <item name="android:padding">30dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/listViewitem</item>
    </style>




</resources>
